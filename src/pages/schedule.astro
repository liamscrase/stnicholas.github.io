---
import Layout from "../layouts/Layout.astro";
import PageH1 from "../components/PageH1.astro";
---

<Layout title="Schedule - St. Nicholas Orthodox Church">
  <link rel="stylesheet" href="/schedule.css" />
  <div id="body-wrapper">
    <div class="content">
      <PageH1 title="Schedule" />

      <h2>Regular Services</h2>

      <div class="regular-schedule">
        <div class="service">
          <div class="image-container">
            <img src="/images/line-art/christ.svg" alt="vespers" />
          </div>
          <div class="inner">
            <h3>Evening service with confession</h3>
            <p>Saturdays at 7:00 PM</p>
          </div>
        </div>
        <div class="service">
          <div class="image-container">
            <img src="/images/line-art/chalice.svg" alt="liturgy" />
          </div>
          <div class="inner">
            <h3>Divine Liturgy</h3>
            <p>Sundays at 9:00 AM</p>
          </div>
        </div>
      </div>

      <div class="calendar-section">
        <h2>See the full calendar</h2>
        <div class="iframe-container">
          <iframe
            src="https://calendar.google.com/calendar/embed?src=liamscrase1%40gmail.com&ctz=Pacific%2FAuckland"
            style="border: 0"
            width="100%"
            height="100%"
            frameborder="0"
            scrolling="no"></iframe>
        </div>
      </div>
    </div>
  </div>
</Layout>
