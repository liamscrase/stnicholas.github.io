---
interface Props {
  title: string;
  subheader: string;
}

const { title } = Astro.props;
const { subheader } = Astro.props;
---
<div class="page-header">
  <h1 class="main-h1">{title}</h1>
  <p class="h1-subheader">{subheader}</p>
</div>
  

<style>
  .page-header {
  text-align: center;
  margin: 0 auto 30px;
  display: flex;
  flex-direction: column;
  align-items: center;

  h1 {
    margin-bottom: 0;
  }

  p {
    margin-top: 24px;
  }
}

</style>